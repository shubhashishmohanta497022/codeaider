{
  "manifest_version": 3,
  "name": "Code Helper",
  "version": "1.0",
  "description": "Scrapes a problem page and sends it to an AI for a suggestion.",

  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],

  "host_permissions": [
    "https://api.gemini.google.com/*"
  ],

  "action": {
    "default_popup": "popup/popup.html"
  },

  "background": {
    "service_worker": "background.js"
  }
}